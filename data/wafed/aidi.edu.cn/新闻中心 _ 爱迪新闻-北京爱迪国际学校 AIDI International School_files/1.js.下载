
$(function(){
	$('.nav li').mouseover(function(){
		
		var currentIndex = $(this).index();
		var left = currentIndex * 120 + 'px';

		$('.nav li div').stop(false,true);
		$(this).find('div').slideDown('slow');

	}).mouseleave(function(){
		$(this).find('strong').slideDown('slow');
		$(this).find('div').slideUp('slow');
    add.style.display = "none";  
	})
    


  $('.nav .l').mouseover(function(){
       $('.nav .l').stop(false,true);
        $('.ppp').slideDown('slow');
    }).mouseleave(function(){
      $('.ppp').slideUp(2000);
      })
  

});




setInterval(function(){
		height = document.documentElement.clientHeight;
		
		var top = document.getElementById("myCarousel").offsetHeight;
		bottomAdverse = document.getElementById('bottom-adverse');
		bottomAdverse.style.top = top+'px';
